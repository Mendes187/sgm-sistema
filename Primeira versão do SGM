        </div>
    </div>

    <!-- MODAL: NOVO ATIVO -->
    <div id="assetModal" class="fixed inset-0 bg-slate-900/60 hidden flex items-center justify-center p-4 z-50 modal-animate">
        <div class="bg-white p-8 rounded-3xl w-full max-w-md">
            <h3 class="text-2xl font-black mb-6 tracking-tighter">Registar Equipamento</h3>
            <form id="assetForm" class="space-y-4">
                <div>
                    <label class="text-xs font-bold text-gray-400 uppercase ml-1">Tag do Equipamento</label>
                    <input type="text" id="assetName" placeholder="Ex: RB-01" class="w-full border-gray-100 border-2 p-4 rounded-2xl outline-none focus:border-blue-500 transition-all font-bold" required>
                </div>
                <div>
                    <label class="text-xs font-bold text-gray-400 uppercase ml-1">Modelo / Fabricante</label>
                    <input type="text" id="assetModel" placeholder="Ex: Slitter 2000" class="w-full border-gray-100 border-2 p-4 rounded-2xl outline-none focus:border-blue-500 transition-all font-bold">
                </div>
                <div class="flex justify-end gap-3 mt-8">
                    <button type="button" onclick="closeModal('assetModal')" class="px-6 py-3 text-gray-400 font-bold">Cancelar</button>
                    <button type="submit" class="bg-blue-600 text-white px-8 py-3 rounded-2xl font-bold shadow-lg shadow-blue-100">Guardar</button>
                </div>
