    <script>
        // Inicializar √≠cones
        lucide.createIcons();

        /*****************************************************************
         * SGM PRO (Supabase Online + Realtime)
         *
         * ‚úÖ Como usar:
         * 1) No Supabase, crie as tabelas com o SQL (veja mensagem do ChatGPT)
         * 2) Cole aqui as credenciais do projeto:
         *****************************************************************/
        const SUPABASE_URL = "https://lrglbzaflnllgpzijpbi.supabase.co";
        const SUPABASE_ANON_KEY = "sb_publishable_SJ8voXTDn7wIYMzW8mw18A_D-adMeMe";

        // Seguran√ßa b√°sica: se n√£o configurar, o sistema abre em modo local (somente demo)
        const IS_SUPABASE_CONFIGURED = SUPABASE_URL.startsWith("http") && SUPABASE_ANON_KEY.length > 30;

        const sb = IS_SUPABASE_CONFIGURED ? window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY) : null;

        // Estado do Sistema (online)
        let state = {
            assets: [],
            orders: [],
            currentAssetId: null,
            currentOSId: null
        };

        // ===== UI Navega√ß√£o =====
        function showSection(id) {
            document.getElementById('section-assets').classList.add('hidden');
            document.getElementById('section-tasks').classList.add('hidden');
            document.getElementById('section-' + id).classList.remove('hidden');
            lucide.createIcons();
        }

        // ===== Emerg√™ncia UI =====
        function updateEmergencyUI() {
            const hasEmergency = state.orders.some(o => o.status === 'EMERG√äNCIA');
            const banner = document.getElementById('critical-banner');
            const visualAlert = document.getElementById('visual-alert');
            const badge = document.getElementById('emergency-badge');

            if (hasEmergency) {
                banner.classList.remove('hidden');
                visualAlert.style.display = 'block';
                badge.classList.remove('hidden');
            } else {
                banner.classList.add('hidden');
                visualAlert.style.display = 'none';
                badge.classList.add('hidden');
            }
        }

        // ===== Modais =====
        function openModal(id) { document.getElementById(id).classList.remove('hidden'); }
        function closeModal(id) { document.getElementById(id).classList.add('hidden'); }

        // ===== Render: Ativos =====
        function renderAssets() {
            const container = document.getElementById('asset-list');
            container.innerHTML = state.assets.map(asset => `
                <div class="bg-white p-6 rounded-[2.5rem] shadow-sm border border-gray-100 hover:shadow-xl transition-all group relative">
                    <div class="flex justify-between items-start mb-6">
                        <div class="p-4 bg-blue-50 text-blue-600 rounded-2xl group-hover:scale-110 transition-transform">
                            <i data-lucide="cpu" class="w-6 h-6"></i>
                        </div>
                        <span class="status-pill ${asset.status === 'Operacional' ? 'bg-ok' : 'bg-danger'}">${asset.status}</span>
                    </div>
                    <h3 class="text-2xl font-black text-slate-800 mb-1">${asset.name}</h3>
                    <p class="text-gray-400 text-xs font-bold uppercase tracking-widest mb-6">${asset.model}</p>

                    <div class="space-y-3 mb-8">
                        <div class="flex items-center gap-2 text-xs font-black text-slate-400 uppercase">
                            <i data-lucide="clipboard-check" class="w-3 h-3 text-blue-500"></i> Inspe√ß√£o Checklist
                        </div>
                        <div class="flex flex-wrap gap-2">
                            ${asset.checklist.length > 0 ?
                                asset.checklist.slice(0, 3).map(c => `<span class="bg-gray-100 text-[9px] px-2 py-1 rounded-md text-gray-500 font-bold">${escapeHtml(c)}</span>`).join('') :
                                '<span class="text-[9px] text-gray-300 italic">Nenhum item definido</span>'
                            }
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-3 pt-6 border-t border-dashed">
                        <button onclick="openChecklist(${asset.id})" class="text-[10px] font-black uppercase text-slate-400 hover:text-blue-600 flex items-center justify-center gap-2">
                             Editar Checklist
                        </button>
                        <button onclick="triggerEmergency('${escapeAttr(asset.name)}')" class="bg-red-600 text-white py-3 rounded-2xl text-[10px] font-black uppercase hover:bg-red-700 transition-all shadow-lg shadow-red-100">
                             ‚ö†Ô∏è Alerta Urgente
                        </button>
                    </div>
                </div>
            `).join('');
            lucide.createIcons();
        }

        // ===== Render: OS =====
        function getElapsedTime(openedAtISO) {
            const ts = Date.parse(openedAtISO);
            if (Number.isNaN(ts)) return "";
            const diff = Math.floor((Date.now() - ts) / 60000); // minutos
            if (diff < 1) return "Agora mesmo";
            return `${diff} min atr√°s`;
        }

        function fmtTime(iso) {
            const d = new Date(iso);
            if (Number.isNaN(d.getTime())) return "";
            return d.toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit' });
        }

        function renderOS() {
            const container = document.getElementById('os-list');
            const pendingEl = document.getElementById('pending-count');
            pendingEl.innerText = `${state.orders.length} Registos Totais`;

            if (state.orders.length === 0) {
                container.innerHTML = `<tr><td colspan="5" class="p-12 text-center text-gray-300 font-bold uppercase text-xs tracking-widest">Sem movimenta√ß√µes recentes</td></tr>`;
                return;
            }

            container.innerHTML = state.orders.map(os => `
                <tr class="transition-colors ${os.status === 'EMERG√äNCIA' ? 'emergency-active' : 'hover:bg-gray-50/50'}">
                    <td class="p-5">
                        <div class="font-black text-slate-700">${escapeHtml(os.asset)}</div>
                        <div class="text-[9px] text-gray-400 font-bold uppercase tracking-tighter">Ref: #${String(os.id).padStart(4,'0').slice(-4)}</div>
                    </td>
                    <td class="p-5">
                        <div class="flex items-center gap-2">
                            <span class="w-2 h-2 rounded-full ${os.type === 'Corretiva' ? 'bg-red-500' : 'bg-blue-500'}"></span>
                            <span class="text-xs font-bold ${os.type === 'Corretiva' ? 'text-red-600' : 'text-blue-600'}">${escapeHtml(os.type)}</span>
                        </div>
                        <div class="text-[10px] text-gray-500 font-bold uppercase">
                            ${os.status === 'EMERG√äNCIA' ? getElapsedTime(os.opened_at) : 'Lan√ßado √†s ' + fmtTime(os.opened_at)}
                        </div>
                    </td>
                    <td class="p-5">
                        ${os.mechanic ?
                            `<div class="flex items-center gap-2">
                                <div class="w-7 h-7 bg-blue-600 rounded-full flex items-center justify-center text-[10px] font-black text-white">${escapeHtml(os.mechanic.charAt(0))}</div>
                                <div>
                                    <div class="text-xs font-black text-slate-700">${escapeHtml(os.mechanic)}</div>
                                    <div class="text-[9px] text-green-500 font-bold uppercase">Aceitou √†s ${os.accepted_at ? fmtTime(os.accepted_at) : ''}</div>
                                </div>
                            </div>` :
                            `<span class="text-[10px] font-black text-red-500 uppercase animate-pulse">Aguardando T√©cnico...</span>`
                        }
                    </td>
                    <td class="p-5">
                        <span class="status-pill ${os.status === 'EMERG√äNCIA' ? 'bg-red-600 text-white' : os.status === 'Conclu√≠da' ? 'bg-green-100 text-green-700' : 'bg-blue-100 text-blue-700'}">
                            ${escapeHtml(os.status)}
                        </span>
                    </td>
                    <td class="p-5 text-right">
                        ${os.status === 'EMERG√äNCIA' ?
                            `<button onclick="openAccept(${os.id})" class="bg-red-600 text-white px-6 py-3 rounded-xl text-xs font-black uppercase hover:bg-red-700 shadow-lg shadow-red-200">Atender Agora</button>` :
                          os.status === 'Em Curso' ?
                            `<button onclick="finishOS(${os.id}, '${escapeAttr(os.asset)}')" class="bg-slate-800 text-white px-4 py-2 rounded-xl text-xs font-bold hover:bg-black">Finalizar</button>` :
                            `<i data-lucide="check-circle-2" class="text-green-500 w-6 h-6 ml-auto"></i>`
                        }
                    </td>
                </tr>
            `).join('');
            lucide.createIcons();
        }

        // ===== Checklist =====
        function openChecklist(assetId) {
            state.currentAssetId = assetId;
            const asset = state.assets.find(a => a.id === assetId);
            if (!asset) return;
            document.getElementById('checklistTitle').innerText = `Checklist: ${asset.name}`;
            renderCheckItems();
            openModal('checklistModal');
        }

        function renderCheckItems() {
            const asset = state.assets.find(a => a.id === state.currentAssetId);
            if (!asset) return;
            const list = document.getElementById('check-items-list');
            list.innerHTML = asset.checklist.map((item, idx) => `
                <div class="flex justify-between items-center bg-gray-50 p-3 rounded-xl border border-gray-100">
                    <span class="text-sm font-bold text-gray-700">${escapeHtml(item)}</span>
                    <button onclick="removeCheckItem(${idx})" class="text-red-400 hover:text-red-600"><i data-lucide="trash-2" class="w-4 h-4"></i></button>
                </div>
            `).join('');
            lucide.createIcons();
        }

        async function addCheckItem() {
            const input = document.getElementById('newCheckItem');
            const val = input.value.trim();
            if(!val) return;

            const asset = state.assets.find(a => a.id === state.currentAssetId);
            if(!asset) return;

            asset.checklist.push(val);
            input.value = '';
            renderCheckItems();
            renderAssets();

            if (sb) {
                await sb.from('assets').update({ checklist: asset.checklist }).eq('id', asset.id);
            }
        }

        async function removeCheckItem(idx) {
            const asset = state.assets.find(a => a.id === state.currentAssetId);
            if(!asset) return;

            asset.checklist.splice(idx, 1);
            renderCheckItems();
            renderAssets();

            if (sb) {
                await sb.from('assets').update({ checklist: asset.checklist }).eq('id', asset.id);
            }
        }

        // ===== OS: abrir / aceitar / finalizar =====
        async function triggerEmergency(assetName) {
            if (!sb) {
                alert("Supabase n√£o configurado. Cole URL e ANON KEY no arquivo.");
                return;
            }

            // 1) Criar OS
            const { error: e1 } = await sb.from('orders').insert([{
                asset: assetName,
                type: 'Corretiva',
                status: 'EMERG√äNCIA',
                mechanic: null
            }]);
            if (e1) { console.error(e1); alert("Falha ao criar OS."); return; }

            // 2) Atualizar status do equipamento
            const asset = state.assets.find(a => a.name === assetName);
            if (asset) {
                await sb.from('assets').update({ status: 'Paragem Cr√≠tica' }).eq('id', asset.id);
            }

            showSection('tasks');
        }

        function openAccept(osId) {
            state.currentOSId = osId;
            openModal('acceptModal');
            setTimeout(() => document.getElementById('mechanicName').focus(), 300);
        }

        async function confirmAccept() {
            const name = document.getElementById('mechanicName').value.trim();
            if(!name) return;

            if (!sb) return;

            const osId = state.currentOSId;
            const { error } = await sb.from('orders')
                .update({ mechanic: name, status: 'Em Curso', accepted_at: new Date().toISOString() })
                .eq('id', osId);

            if (error) { console.error(error); alert("Falha ao aceitar OS."); return; }

            document.getElementById('mechanicName').value = '';
            closeModal('acceptModal');
        }

        async function finishOS(id, assetName) {
            if (!sb) return;

            const { error: e1 } = await sb.from('orders')
                .update({ status: 'Conclu√≠da', closed_at: new Date().toISOString() })
                .eq('id', id);

            if (e1) { console.error(e1); alert("Falha ao finalizar OS."); return; }

            const asset = state.assets.find(a => a.name === assetName);
            if (asset) {
                const { error: e2 } = await sb.from('assets').update({ status: 'Operacional' }).eq('id', asset.id);
                if (e2) console.error(e2);
            }
        }

        // ===== Ativos: criar =====
        document.getElementById('assetForm').onsubmit = async (e) => {
            e.preventDefault();

            const name = document.getElementById('assetName').value.toUpperCase().trim();
            const model = document.getElementById('assetModel').value.trim() || 'Padr√£o';

            if (!name) return;

            if (!sb) {
                alert("Supabase n√£o configurado. Cole URL e ANON KEY no arquivo.");
                return;
            }

            const { error } = await sb.from('assets').insert([{
                name,
                model,
                status: 'Operacional',
                checklist: []
            }]);

            if (error) { console.error(error); alert("Falha ao criar equipamento (verifique se a tag j√° existe)."); return; }

            closeModal('assetModal');
            e.target.reset();
        };

        // ===== Online: carregar e realtime =====
        async function loadInitialData() {
            if (!sb) return;

            const [{ data: assets, error: aerr }, { data: orders, error: oerr }] = await Promise.all([
                sb.from('assets').select('*').order('id', { ascending: true }),
                sb.from('orders').select('*').order('id', { ascending: false }).limit(200)
            ]);

            if (aerr) console.error(aerr);
            if (oerr) console.error(oerr);

            state.assets = (assets || []).map(a => ({
                id: a.id,
                name: a.name,
                model: a.model,
                status: a.status,
                checklist: Array.isArray(a.checklist) ? a.checklist : (a.checklist || [])
            }));

            state.orders = (orders || []).map(o => ({
                id: o.id,
                asset: o.asset,
                type: o.type,
                status: o.status,
                mechanic: o.mechanic,
                opened_at: o.opened_at,
                accepted_at: o.accepted_at,
                closed_at: o.closed_at
            }));

            renderAssets();
            renderOS();
            updateEmergencyUI();
        }

        async function reloadAssets() {
            if (!sb) return;
            const { data, error } = await sb.from('assets').select('*').order('id', { ascending: true });
            if (error) { console.error(error); return; }
            state.assets = (data || []).map(a => ({
                id: a.id,
                name: a.name,
                model: a.model,
                status: a.status,
                checklist: Array.isArray(a.checklist) ? a.checklist : (a.checklist || [])
            }));
            renderAssets();
        }

        async function reloadOrders() {
            if (!sb) return;
            const { data, error } = await sb.from('orders').select('*').order('id', { ascending: false }).limit(200);
            if (error) { console.error(error); return; }
            state.orders = (data || []).map(o => ({
                id: o.id,
                asset: o.asset,
                type: o.type,
                status: o.status,
                mechanic: o.mechanic,
                opened_at: o.opened_at,
                accepted_at: o.accepted_at,
                closed_at: o.closed_at
            }));
            renderOS();
            updateEmergencyUI();
        }

        function startRealtime() {
            if (!sb) return;

            const channel = sb.channel('sgm-realtime')
                .on('postgres_changes', { event: '*', schema: 'public', table: 'assets' }, () => reloadAssets())
                .on('postgres_changes', { event: '*', schema: 'public', table: 'orders' }, () => reloadOrders())
                .subscribe((status) => {
                    // opcional: console.log("Realtime:", status);
                });

            window.__sgmRealtime = channel;
        }

        // ===== Helpers: escape =====
        function escapeHtml(str) {
            return String(str ?? '')
                .replaceAll('&', '&amp;')
                .replaceAll('<', '&lt;')
                .replaceAll('>', '&gt;')
                .replaceAll('"', '&quot;')
                .replaceAll("'", '&#039;');
        }
        function escapeAttr(str) { return escapeHtml(str).replaceAll('`', '&#096;'); }

        // Atualiza√ß√£o autom√°tica do contador de tempo (s√≥ para emerg√™ncias)
        setInterval(() => {
            if(state.orders.some(o => o.status === 'EMERG√äNCIA')) renderOS();
        }, 30000);

        async function signInWithGoogle() {
          const { error } = await sb.auth.signInWithOAuth({
            provider: 'google',
            options: {
          redirectTo: window.location.origin
            }
          });

          if (error) {
            console.error(error);
            alert("Erro ao fazer login.");
  }
}

        function setLoggedInUI(user) {
          const gate = document.getElementById('loginGate');
              if (!user) {
        gate.classList.remove('hidden');
  } else {
    gate.classList.add('hidden');
  }
}

        document.addEventListener("DOMContentLoaded", () => {
          const btn = document.getElementById("btnGoogleLogin");
              if (btn) {
        btn.addEventListener("click", signInWithGoogle);
  }
});
       window.onload = async () => {
          if (!IS_SUPABASE_CONFIGURED) {
            alert("Supabase n√£o configurado.");
    return;
  }

  const { data: { session } } = await sb.auth.getSession();

  setLoggedInUI(session?.user);

  // Se n√£o estiver logado, n√£o carrega o sistema
  if (!session?.user) return;

  await loadInitialData();
  startRealtime();

        sb.auth.onAuthStateChange((_event, newSession) => {
            setLoggedInUI(newSession?.user);
            if (!newSession?.user) location.reload();
      });
};

                return;
            }

            await loadInitialData();
            startRealtime();
        }
    </script>
</body>

</html>
